<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuGade">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

         <ImageView
             android:id="@+id/img_product"
             android:background="@drawable/s10sample"
             android:layout_width="50dp"
             android:layout_height="100dp"
             android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_transaksi"
                tools:text="TRX3238584"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/img_product"
                android:layout_toRightOf="@+id/img_product"
                />

            <TextView
                android:id="@+id/nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_transaksi"
                tools:text="SAMSUNG S10 PRO MAX"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/img_product"
                android:layout_toRightOf="@+id/img_product"/>

            <TextView
                android:id="@+id/url_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_barang"
                tools:text="https://www.blibli.com"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/img_product"
                android:layout_toRightOf="@+id/img_product"/>

            <TextView
                android:id="@+id/label_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/url_barang"
                android:text="Qty : "
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/img_product"
                android:layout_toRightOf="@+id/img_product" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_qty"
                android:layout_toRightOf="@+id/img_product"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="1"
                android:layout_below="@id/url_barang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_qty"
                android:id="@+id/harga_barang"
                tools:text="Rp. 5.000.000"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/img_product"
                android:layout_toRightOf="@+id/img_product"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

        <TextView
            tools:text="Uang Muka"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hijauGade"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/jumlah_dp"
            tools:text="Rp. 3.000.000/4Gr"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hijauGade"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="8dp"
            android:background="#bbb"/>

        <TextView
            tools:text="Cicilan"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hijauGade"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginTop="16dp">

            <TableRow>
                <TextView
                    android:id="@+id/bulan"
                    tools:text="Bulan 1"
                    android:width="250px"
                    />
                <TextView
                    android:id="@+id/tanggal_pembayaran"
                    android:textAlignment="center"
                    tools:text="12/11/19"
                    />
                <TextView
                    android:id="@+id/nilai_pembayaran"
                    tools:text="Rp. 1.000.000"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/bulan2"
                    tools:text="Bulan 1"
                    android:width="250px"
                    />
                <TextView
                    android:id="@+id/tanggal_pembayaran2"
                    android:textAlignment="center"
                    tools:text="12/11/19"
                    />
                <TextView
                    android:id="@+id/nilai_pembayaran2"
                    tools:text="Rp. 1.000.000"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/bulan3"
                    tools:text="Bulan 1"
                    android:width="250px"
                    />
                <TextView
                    android:id="@+id/tanggal_pembayaran3"
                    android:textAlignment="center"
                    tools:text="12/11/19"
                    />
                <TextView
                    android:id="@+id/nilai_pembayaran3"
                    tools:text="Rp. 1.000.000"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    />
            </TableRow>
        </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_border_gade"
            android:text="Pengajuan Kredit"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>