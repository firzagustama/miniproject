<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuGade">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Belanja"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengajuan Kredit Berhasil"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/hijauGade"
        android:textStyle="bold"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/img_success"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ceklist"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/hijauGade">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:layout_height="wrap_content"
                android:text="Harga Barang"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                />

            <TextView
                android:id="@+id/harga_barang"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000.000"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Kode Kredit"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/kode_kredit"
                android:layout_height="wrap_content"
                android:text="TXR1243485345"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:text="Tipe Transaksi"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/tipe_transaksi"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:text="Angsuran"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/angsuran"
                android:layout_height="wrap_content"
                android:text="Rp. 750.000"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:text="Uang Muka"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/uang_muka"
                android:layout_height="wrap_content"
                android:text="Rp. 3.000.000"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_border_gade"
            android:text="Selesai"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>